<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="~/Content/JavaScripts/UIScripts.js"></script>
    <link href="~/Content/StyleSheets/Default.css" rel="stylesheet" />
    
</head>
<body>
    <div class="containerTop">
        <div class="containerTopText">
            <label class="navbar-brand">Book Appointment</label>
            <label id="LoggedInUser" class="navbar-brand-left"></label>
            @Html.ActionLink("Logout", "Logout", "Home", new { @class = "navbar-brand-right", id = "Logout" })
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:white; text-align:right">&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
            var value = '@Request.RequestContext.HttpContext.Session["UserName"]';
            if(value=='')
            {
                $('#Logout').css('display', 'none');
                $('#LoggedInUser').css('display', 'none');                
            }
            else
            {
                $("#Logout").css("display", "block");
                $("#LoggedInUser").css("display", "block");
                $('#LoggedInUser').text(value);
            }

</script>